<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="800" prefWidth="550" stylesheets="/css/SignUpForm.css"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.member.SignUpController">

    <VBox alignment="CENTER" prefHeight="750" prefWidth="550" spacing="30" styleClass="container">
        <!-- 로그인 버튼 -->
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10 10 0 0" spacing="10" styleClass="SignUp_page_TopBtn">
            <Button onAction="#goBack" text="로그인" styleClass="SignUp_loginBtn"/>
        </HBox>

        <!-- 자바짐 타이틀 -->
        <Label text="JAVA GYM" styleClass="signup_title_label" layoutX="50" layoutY="50">
            <font><Font name="Anton-Regular" /></font>
        </Label>

        <!-- 입력 필드 -->
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="nameField" promptText="이름" styleClass="SignUp_nameInput" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="phoneField" promptText="전화번호 (8자리)" styleClass="SignUp_phoneInput" />
            <Button fx:id="sendButton" onAction="#sendNumber" text="전송" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="codeField" promptText="인증번호" />
            <Button fx:id="checkButton" onAction="#checkNumber" text="확인" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <PasswordField fx:id="passwordField" promptText="비밀번호 (4자리 숫자)" styleClass="SignUp_passwordInput" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <PasswordField fx:id="passwordConfirmField" promptText="비밀번호 확인" styleClass="SignUp_passwordInput" />
        </HBox>

        <!-- 성별 -->
        <HBox fx:id="genderId" alignment="CENTER" spacing="35">
            <Label text="성별" styleClass="SingUp_sex_radioBtn_title"/>
            <fx:define>
                <ToggleGroup fx:id="genderRadio" />
            </fx:define>
            <RadioButton fx:id="maleButton" text="남" toggleGroup="$genderRadio" styleClass="SingUp_sex_radioBtn_1" />
            <RadioButton fx:id="femaleButton" text="여" toggleGroup="$genderRadio" styleClass="SingUp_sex_radioBtn_2" />
        </HBox>

        <!-- 이메일 -->
        <HBox alignment="CENTER" spacing="15">
            <TextField fx:id="emailIdField" promptText="이메일 아이디" styleClass="SignUp_emailInput"/>
            <Label fx:id="atSign" styleClass="SignUp_atSign">@</Label>
            <ComboBox fx:id="emailDomainField" promptText="선택 또는 직접 입력" editable="true" styleClass="SignUp_emailComboBox">
                <items>
                    <FXCollections fx:factory="observableArrayList" >
                        <String fx:value="gmail.com" />
                        <String fx:value="naver.com" />
                        <String fx:value="daum.net" />
                        <String fx:value="yahoo.com" />
                    </FXCollections>
                </items>
            </ComboBox>
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="birthField" promptText="생년월일 (6자리)" styleClass="SignUp_birthInput"/>
        </HBox>

        <!-- 버튼 -->
        <HBox fx:id="signupButton" alignment="CENTER" spacing="10" styleClass="SignUp_page_Btn">
            <Button onAction="#signUp" text="회원 등록" styleClass="SignUp_addMemberBtn"/>
        </HBox>

    </VBox>
</AnchorPane>
