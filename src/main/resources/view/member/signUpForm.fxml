<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="800" prefWidth="550" stylesheets="/css/signUpForm.css"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.member.SignUpController">
    <VBox alignment="CENTER" prefHeight="750" prefWidth="550" spacing="15.0">
        <fx:define>
            <ToggleGroup fx:id="gender" />
        </fx:define>

        <VBox alignment="CENTER_RIGHT" style="-fx-padding: 10 10 0 0" spacing="10">
            <Button onAction="#goBack" text="로그인" />
        </VBox>
        <!-- 자바짐 텍스트와 폰트 설정 -->
        <Label text="JAVA GYM" stylesheets="/css/fonts.css" styleClass="title_label" layoutX="50" layoutY="50">
            <font><Font name="Anton-Regular" /></font>
        </Label>

        <HBox alignment="CENTER" spacing="10">

            <TextField fx:id="nameField" promptText="이름" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">

            <TextField fx:id="phoneField" promptText="010 제외한 전화번호 8자리" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">

            <PasswordField fx:id="passwordField" promptText="비밀번호 (4자리 숫자)" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">

            <PasswordField fx:id="passwordConfirmField" promptText="비밀번호 확인" />
        </HBox>

        <HBox fx:id="genderId" alignment="CENTER" spacing="10">
            <Label>성별</Label>
            <RadioButton fx:id="maleButton" text="남" toggleGroup="$gender" />
            <RadioButton fx:id="femaleButton" text="여" toggleGroup="$gender" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">

            <TextField fx:id="emailIdField" prefWidth="120" promptText="이메일 아이디" />
            <Label fx:id="atSign">@</Label>
            <ComboBox fx:id="emailDomainField" promptText="선택 또는 직접 입력" prefWidth="170" editable="true">
                <items>
                    <FXCollections fx:factory="observableArrayList" >
                        <String fx:value="gmail.com" />
                        <String fx:value="naver.com" />
                        <String fx:value="daum.net" />
                        <String fx:value="yahoo.com" />
                    </FXCollections>
                </items>
            </ComboBox>
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="birthField" promptText="주민등록번호 앞 6자리" />
        </HBox>


        <Button onAction="#signUp" text="회원 등록" />
    </VBox>
</AnchorPane>
