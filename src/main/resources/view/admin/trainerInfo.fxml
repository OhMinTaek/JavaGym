<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<SplitPane dividerPositions="0.35" orientation="HORIZONTAL" prefHeight="900.0" prefWidth="1150.0" stylesheets="/css/common.css"
           xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="controller.admin.TrainerInfoController">

    <items>
        <VBox fx:id="detailArea" spacing="25" alignment="CENTER" styleClass="container">
            <Label text="트레이너 등록"  styleClass="trainerInfo_title_1"/>

            <HBox alignment="CENTER" spacing="10">
                <StackPane styleClass="trainerInfo_ImageContainer" prefHeight="151.2" prefWidth="113.4">
                    <ImageView fx:id="imageView" fitHeight="151.2" fitWidth="113.4" pickOnBounds="true" preserveRatio="true"/>
                </StackPane>
            </HBox>
            <HBox alignment="CENTER">
                <Button text="사진 등록" onAction="#selectPhoto" styleClass="trainerInfo_ImageBtn"/>
            </HBox>

            <HBox alignment="CENTER">
                <TextField fx:id="nameField" promptText="이름" styleClass="trainerInfo_nameInput"/>
            </HBox>

            <HBox alignment="CENTER">
                <TextField fx:id="idField" promptText="아이디" styleClass="trainerInfo_idInput"/>
            </HBox>

            <HBox alignment="CENTER">
                <TextField fx:id="phoneField" promptText="전화번호 (8자리)" styleClass="trainerInfo_phoneInput"/>
            </HBox>

            <HBox alignment="CENTER" spacing="35">
                <Label text="성별" styleClass="trainerInfo_sex_radioBtn_title" />
                <fx:define>
                    <ToggleGroup fx:id="genderRadio"/>
                </fx:define>
                <RadioButton fx:id="maleButton" text="남" toggleGroup="$genderRadio" styleClass="trainerInfo_sex_radioBtn_1"/>
                <RadioButton fx:id="femaleButton" text="여" toggleGroup="$genderRadio" styleClass="trainerInfo_sex_radioBtn_2"/>
            </HBox>

            <HBox alignment="CENTER">
                <TextField fx:id="heightField" promptText="키" styleClass="trainerInfo_heightInput"/>
            </HBox>

            <HBox alignment="CENTER">
                <TextField fx:id="weightField" promptText="몸무게" styleClass="trainerInfo_weightInput"/>
            </HBox>

            <HBox alignment="CENTER">
                <TextField fx:id="birthField" promptText="생년월일 (6자리)" styleClass="trainerInfo_birthInput"/>
            </HBox>

            <HBox alignment="CENTER" spacing="25">
                <Label text="근무 시간" styleClass="trainerInfo_worktime_radioBtn_title"/>
                <fx:define>
                    <ToggleGroup fx:id="workTimeRadio"/>
                </fx:define>
                <RadioButton fx:id="amButton" text="AM" toggleGroup="$workTimeRadio" styleClass="trainerInfo_worktime_radioBtn_1"/>
                <RadioButton fx:id="pmButton" text="PM" toggleGroup="$workTimeRadio" styleClass="trainerInfo_worktime_radioBtn_2"/>
            </HBox>

            <HBox alignment="CENTER" spacing="20" styleClass="trainerInfo_Btn">
                <Button text="트레이너 등록" onAction="#addTrainer" styleClass="trainerInfo_addTrainerBtn"/>
                <Button text="뒤로 가기" onAction="#goBack" styleClass="trainerInfo_goBackBtn"/>
            </HBox>
        </VBox>

        <VBox fx:id="listArea" spacing="40" alignment="CENTER">
            <Label text="트레이너 정보" styleClass="trainerInfo_title_2"/>
            <TableView fx:id="trainerTable" prefHeight="550.0">
                <columns>
                    <TableColumn text="번호" fx:id="numCol"  styleClass="trainerInfo_numColumn"/>
                    <TableColumn text="이름" fx:id="nameCol" styleClass="trainerInfo_nameColumn"/>
                    <TableColumn text="아이디" fx:id="idCol" styleClass="trainerInfo_idColumn"/>
                    <TableColumn text="성별" fx:id="genderCol" styleClass="trainerInfo_genderColumn"/>
                    <TableColumn text="근무시간" fx:id="workTimeCol" styleClass="trainerInfo_workTimeColumn"/>
                    <TableColumn text="생년월일" fx:id="birthCol" styleClass="trainerInfo_birthColumn"/>
                    <TableColumn text="전화번호" fx:id="phoneCol" styleClass="trainerInfo_phoneColumn"/>
                </columns>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="15" styleClass="trainerInfo_subBtn">
                <Button text="새로고침" onAction="#resetPage" styleClass="trainerInfo_refreshBtn"/>
            </HBox>
        </VBox>

    </items>
</SplitPane>