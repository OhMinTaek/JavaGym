<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<SplitPane dividerPositions="0.35" orientation="HORIZONTAL" prefHeight="800.0" prefWidth="1150.0" stylesheets="/css/common.css"
           xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="controller.admin.TrainerInfoController">

    <items>
        <VBox fx:id="detailArea" spacing="30" alignment="CENTER">
            <Label text="트레이너 등록"  styleClass="trainerInfo_title_1"/>

            <HBox alignment="CENTER">
                <TextField fx:id="nameField" promptText="이름" styleClass="nameInput"/>
            </HBox>

            <Button text="사진 등록" onAction="#selectPhoto"/>
            <ImageView fx:id="imageView" fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true" />

            <HBox alignment="CENTER">
                <TextField fx:id="idField" promptText="아이디" styleClass="idInput"/>
            </HBox>

            <HBox alignment="CENTER">
                <TextField fx:id="phoneField" promptText="전화번호" styleClass="phoneInput"/>
            </HBox>

            <HBox alignment="CENTER" spacing="35">
                <Label text="성별" styleClass="sex_radioBtn_title" />
                <fx:define>
                    <ToggleGroup fx:id="genderRadio"/>
                </fx:define>
                <RadioButton fx:id="maleButton" text="남" toggleGroup="$genderRadio" styleClass="sex_radioBtn_1"/>
                <RadioButton fx:id="femaleButton" text="여" toggleGroup="$genderRadio" styleClass="sex_radioBtn_2"/>
            </HBox>

            <HBox alignment="CENTER">
                <TextField fx:id="heightField" promptText="키" styleClass="heightInput"/>
            </HBox>

            <HBox alignment="CENTER">
                <TextField fx:id="weightField" promptText="몸무게" styleClass="weightInput"/>
            </HBox>

            <HBox alignment="CENTER">
                <TextField fx:id="birthField" promptText="생년월일(6자리)" styleClass="birthInput"/>
            </HBox>

            <HBox alignment="CENTER" spacing="35">
                <Label text="근무 시간" styleClass="worktime_radioBtn_title"/>
                <fx:define>
                    <ToggleGroup fx:id="workTimeRadio"/>
                </fx:define>
                <RadioButton fx:id="amButton" text="AM" toggleGroup="$workTimeRadio" styleClass="worktime_radioBtn_1"/>
                <RadioButton fx:id="pmButton" text="PM" toggleGroup="$workTimeRadio" styleClass="worktime_radioBtn_2"/>
            </HBox>

            <HBox alignment="CENTER" spacing="20" styleClass="trainerInfo_Btn">
                <Button text="트레이너 등록" onAction="#addTrainer" styleClass="addTrainerBtn"/>
                <Button text="뒤로 가기" onAction="#goBack" styleClass="goBackBtn2"/>
            </HBox>
        </VBox>

        <VBox fx:id="listArea" spacing="40" alignment="CENTER">
            <Label text="트레이너 정보" styleClass="trainerInfo_title_2"/>
            <TableView fx:id="trainerTable" prefHeight="400.0">
                <columns>
                    <TableColumn text="번호" fx:id="numCol"  styleClass="numColumn"/>
                    <TableColumn text="이름" fx:id="nameCol" styleClass="nameColumn"/>
                    <TableColumn text="아이디" fx:id="idCol" styleClass="idColumn"/>
                    <TableColumn text="성별" fx:id="genderCol" styleClass="genderColumn"/>
                    <TableColumn text="근무시간" fx:id="workTimeCol" styleClass="workTimeColumn"/>
                    <TableColumn text="생년월일" fx:id="birthCol" styleClass="birthColumn"/>
                    <TableColumn text="전화번호" fx:id="phoneCol" styleClass="phoneColumn"/>
                </columns>
            </TableView>
        </VBox>

    </items>
</SplitPane>