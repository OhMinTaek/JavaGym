<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<AnchorPane prefHeight="800.0" prefWidth="550.0" stylesheets="/css/AdminHello.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.admin.HelloAdminController">
    <VBox alignment="CENTER" prefHeight="600" prefWidth="450" spacing="20.0" layoutX="48" layoutY="100" styleClass="container">
        <Label text="JAVA GYM" stylesheets="/css/fonts.css" styleClass="title_label">
            <font>
                <Font name="Anton-Regular"/>
            </font>
        </Label>
        <Label text="Admin Page" stylesheets="/css/fonts.css" styleClass="subtitle_label">
            <font>
                <Font name="Anton-Regular"/>
            </font>
        </Label>
        <ImageView fx:id="profileImage" fitHeight="200" fitWidth="200" preserveRatio="true"></ImageView>

        <VBox alignment="CENTER" spacing="30">
            <HBox alignment="CENTER" spacing="10" styleClass="Btn">
                <Button text="회원 관리" onAction="#memberInfo" styleClass="memberManagementBtn"/>
                <Button text="트레이너 관리" onAction="#trainerInfo" styleClass="trainerManagementBtn"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10" styleClass="Btn">
                <Button text="로그아웃" onAction="#logout" styleClass="logOutBtn" />
            </HBox>
        </VBox>

    </VBox>
</AnchorPane>
