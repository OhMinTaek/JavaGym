<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="550.0" stylesheets="/css/AdminLogin.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.admin.AdminLoginController">
    <VBox alignment="CENTER" prefHeight="800" prefWidth="550" spacing="20">
        <Label text="JAVA GYM" stylesheets="/css/fonts.css" styleClass="title_label" layoutX="100" layoutY="100">
          <font>
              <Font name="Anton-Regular"/>
          </font>
       </Label>
        <ImageView fx:id="profileImage" fitHeight="200" fitWidth="200" preserveRatio="true"></ImageView>

        <VBox alignment="CENTER" spacing="30">
            <HBox alignment="CENTER" spacing="40" stylesheets="/css/fonts.css">
                <TextField fx:id="idField" promptText="관리자 아이디" />
            </HBox>

            <HBox alignment="CENTER" spacing="20" stylesheets="/css/fonts.css">
                <PasswordField fx:id="passwordField" promptText="관리자 비밀번호"/>
            </HBox>

            <HBox alignment="CENTER" spacing="20" styleClass="Btn">
                <Button onAction="#goBack" styleClass="goBackBtn" text="뒤로 가기"/>
                <Button onAction="#login" styleClass="loginBtn" text="로그인"/>
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>
