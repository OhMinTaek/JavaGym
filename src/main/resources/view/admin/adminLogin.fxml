<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="550.0" stylesheets="/css/common.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.admin.AdminLoginController">
    <VBox alignment="CENTER" prefHeight="600" prefWidth="450" spacing="20" layoutX="48" layoutY="100">
        <!-- 자바짐 타이틀 -->
        <Label text="JAVA GYM" styleClass="login_title_label" layoutX="100" layoutY="100"/>

        <!-- 자바짐 이미지 -->
        <ImageView fx:id="profileImage" fitHeight="200" fitWidth="200" preserveRatio="true" />

        <VBox alignment="CENTER" spacing="30">
            <!-- 입력 필드 -->
            <HBox alignment="CENTER" spacing="40">
                <TextField fx:id="idField" promptText="관리자 아이디" styleClass="Login_idInput"/>
            </HBox>

            <HBox alignment="CENTER" spacing="20">
                <PasswordField fx:id="passwordField" onAction="#login" promptText="관리자 비밀번호" styleClass="Login_passwordInput"/>
            </HBox>
            <!-- 버튼 -->
            <HBox alignment="CENTER" spacing="20" styleClass="Login_page_Btn">
                <Button text="로그인" onAction="#login" styleClass="Login_loginBtn"/>
                <Button text="뒤로 가기" onAction="#goBack" styleClass="Login_goBackBtn"/>
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>
