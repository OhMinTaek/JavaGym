<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.text.Font?>

<SplitPane dividerPositions="0.35" orientation="HORIZONTAL" prefHeight="900.0" prefWidth="1150.0" stylesheets="/css/common.css"
           xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="controller.admin.MemberInfoController">

    <items>
        <!-- 회원 등록 영역 -->
        <VBox fx:id="detailArea" spacing="30" alignment="CENTER" styleClass="container">
            <Label text="회원 등록" styleClass="memberInfo_title_1"/>

            <HBox alignment="CENTER">
                <TextField fx:id="nameField" promptText="이름" styleClass="memberInfo_nameInput"/>
            </HBox>

            <HBox alignment="CENTER">
                <TextField fx:id="phoneField" promptText="전화번호 (8자리)" styleClass="memberInfo_phoneInput"/>
            </HBox>

            <HBox fx:id="genderId" alignment="CENTER" spacing="35" >
                <Label text="성별" styleClass="memberInfo_sex_radioBtn_title"/>
                <fx:define>
                    <ToggleGroup fx:id="genderRadio"/>
                </fx:define>
                <RadioButton fx:id="maleButton" text="남" toggleGroup="$genderRadio" styleClass="memberInfo_sex_radioBtn_1"/>
                <RadioButton fx:id="femaleButton" text="여" toggleGroup="$genderRadio" styleClass="memberInfo_sex_radioBtn_2"/>
            </HBox>

            <HBox alignment="CENTER">
                <TextField fx:id="emailField" promptText="이메일" styleClass="memberInfo_emailInput"/>
            </HBox>

            <HBox alignment="CENTER">
                <TextField fx:id="birthField" promptText="생년월일 (6자리)" styleClass="memberInfo_birthInput"/>
            </HBox>

            <HBox alignment="CENTER" spacing="20" styleClass="memberInfo_Btn">
                <Button text="회원 등록" onAction="#addMember" styleClass="memberInfo_addMemberBtn"/>
                <Button text="뒤로 가기" onAction="#goBack" styleClass="memberInfo_goBackBtn"/>
            </HBox>
        </VBox>

        <!-- 회원 목록 영역 -->
        <VBox fx:id="listArea" spacing="10" alignment="CENTER">
            <Label text="회원 정보" styleClass="memberInfo_title_2"/>

            <HBox alignment="CENTER_RIGHT" spacing="15" styleClass="memberInfo_searchBox">
                <TextField fx:id="searchNameField" promptText="회원 이름" styleClass="memberInfo_searchInput"/>
                <Button text="검색" onAction="#searchMember" styleClass="memberInfo_searchBtn"/>
            </HBox>

            <TableView fx:id="membersTable" prefHeight="550.0">
                <columns>
                    <TableColumn text="번호" fx:id="numCol" styleClass="memberInfo_numColumn"/>
                    <TableColumn text="이름" fx:id="nameCol" styleClass="memberInfo_nameColumn"/>
                    <TableColumn text="성별" fx:id="genderCol" styleClass="memberInfo_genderColumn"/>
                    <TableColumn text="이메일" fx:id="emailCol" styleClass="memberInfo_emailColumn"/>
                    <TableColumn text="생년월일" fx:id="birthCol" styleClass="memberInfo_birthColumn"/>
                    <TableColumn text="전화번호" fx:id="phoneCol" styleClass="memberInfo_phoneColumn"/>
                    <TableColumn text="가입일" fx:id="enrollCol" styleClass="memberInfo_enrollColumn"/>
                </columns>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="15" styleClass="memberInfo_subBtn">
                <Button text="사물함" onAction="#showUsingLocker" styleClass="memberInfo_lockerBtn"/>
                <Button text="새로고침" onAction="#resetPage" styleClass="memberInfo_refreshBtn"/>
            </HBox>
        </VBox>
    </items>
</SplitPane>
