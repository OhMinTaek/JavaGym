<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.text.Font?>

<SplitPane dividerPositions="0.40" orientation="HORIZONTAL" prefHeight="800.0" prefWidth="1150.0"
           xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="controller.admin.MemberInfoController">

    <items>
        <VBox fx:id="detailArea" spacing="30" alignment="CENTER" stylesheets="/css/common.css">
            <Label text="회원 관리" styleClass="split_title_1">
                <font>
                    <Font name="Jua"/>
                </font>
            </Label>

            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="nameField" promptText="이름" styleClass="nameInput"/>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="phoneField" promptText="전화번호" styleClass="phoneInput"/>
            </HBox>

            <HBox alignment="CENTER" spacing="10" >
                <Label text="성별" styleClass="sex_radioBtn_title">

                </Label>
                <fx:define>
                    <ToggleGroup fx:id="genderRadio"/>
                </fx:define>
                <RadioButton fx:id="maleButton" text="남" toggleGroup="$genderRadio" styleClass="radioBtn_1"/>
                <RadioButton fx:id="femaleButton" text="여" toggleGroup="$genderRadio" styleClass="radioBtn_2"/>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="emailField" promptText="이메일" styleClass="emailInput"/>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="birthField" promptText="생년월일(6자리)" styleClass="birthInput"/>
            </HBox>

            <HBox alignment="CENTER" spacing="20">
                <Button text="회원 등록" onAction="#addMember" styleClass="addMemberBtn"/>
                <Button text="회원 수정" onAction="#updateMember" styleClass="updateMemberBtn"/>
                <Button text="회원 삭제" onAction="#deleteMember" styleClass="deleteMemberBtn"/>
            </HBox>
            <Button text="뒤로 가기" onAction="#goBack" styleClass="goBackBtn2"/>
        </VBox>

        <!-- 회원 목록 영역 -->
        <VBox fx:id="listArea" spacing="20" alignment="CENTER" stylesheets="/css/common.css">
            <Label text="회원 정보" styleClass="split_title_2">
                <font>
                    <Font name="Jua"/>
                </font>
            </Label>
            <TableView fx:id="membersTable" prefHeight="550.0">
                <columns>
                    <TableColumn text="번호" fx:id="numCol" styleClass="numColumn"/>
                    <TableColumn text="이름" fx:id="nameCol" styleClass="nameColumn"/>
                    <TableColumn text="성별" fx:id="genderCol" styleClass="genderColumn"/>
                    <TableColumn text="이메일" fx:id="emailCol" styleClass="emailColumn"/>
                    <TableColumn text="생년월일" fx:id="birthCol" styleClass="birthColumn"/>
                    <TableColumn text="전화번호" fx:id="phoneCol" styleClass="phoneColumn"/>
                    <TableColumn text="가입일" fx:id="enrollCol" styleClass="enrollColumn"/>
                </columns>
            </TableView>
        </VBox>
    </items>
</SplitPane>
