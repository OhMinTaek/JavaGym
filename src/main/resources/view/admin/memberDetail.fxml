<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<SplitPane dividerPositions="0.5" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.admin.MemberDetailController">
    <items>
        <VBox fx:id="memberDetailArea" alignment="CENTER" spacing="10.0">
            <Label text="회원 상세 정보" />

            <HBox alignment="CENTER" spacing="10">
                <Label>이름</Label>
                <TextField fx:id="nameField"/>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label>전화번호</Label>
                <TextField fx:id="phoneField" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label>성별</Label>
                <fx:define>
                    <ToggleGroup fx:id="genderRadio"/>
                </fx:define>
                <RadioButton fx:id="maleButton" text="남" toggleGroup="$genderRadio" />
                <RadioButton fx:id="femaleButton" text="여" toggleGroup="$genderRadio" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label>이메일</Label>
                <TextField fx:id="emailField" prefWidth="185" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label>생년월일</Label>
                <DatePicker fx:id="birthPicker" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label>가입일</Label>
                <DatePicker fx:id="enrollPicker" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Button onAction="#goBack" text="뒤로 가기" />
                <Button onAction="#updateMember" text="수정" />
                <Button onAction="#deleteMember" text="삭제" />
            </HBox>
        </VBox>

        <VBox fx:id="additionalInfoArea" alignment="CENTER" spacing="10.0">
            <Label text="부가 정보" />
            <HBox alignment="CENTER" spacing="10">
                <Label>헬스장 이용권</Label>
                <Label fx:id="gymTicket"></Label>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label>PT 이용권</Label>
                <Label fx:id="PT_ticket"></Label>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label>담당 트레이너</Label>
                <Label fx:id="trainer"></Label>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label>운동복</Label>
                <Label fx:id="clothes"></Label>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label>사물함 번호</Label>
                <Label fx:id="lockerNum"></Label>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label>사물함 기간</Label>
                <Label fx:id="lockerPeriod"></Label>
            </HBox>


        </VBox>
    </items>
</SplitPane>
