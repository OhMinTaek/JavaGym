<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>

<AnchorPane prefHeight="800.0" prefWidth="550.0" stylesheets="/css/common.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.trainer.HelloTrainerController">
    <VBox alignment="CENTER" prefHeight="600" prefWidth="450" spacing="30.0" layoutX="48" layoutY="100" styleClass="container">
        <Label text="JAVA GYM" styleClass="hello_title_label">
            <font>
                <Font name="Anton-Regular"/>
            </font>
        </Label>
        <Label text="트레이너 페이지" styleClass="hello_subtitle_label">
            <font>
                <Font name="Jua"/>
            </font>
        </Label>
        <ImageView fx:id="profileImage" fitHeight="200" fitWidth="200" preserveRatio="true" />

        <HBox alignment="CENTER" spacing="30" styleClass="Hello_page_Btn">
            <HBox alignment="CENTER" spacing="50">
                <Button text="예약 관리" onAction="#reservationInfo" styleClass="reservationBtn"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button text="로그아웃" onAction="#logout" styleClass="logOutBtn" />
            </HBox>
        </HBox>

    </VBox>
</AnchorPane>
