<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<SplitPane dividerPositions="0.35" orientation="HORIZONTAL" prefHeight="800.0" prefWidth="1150.0" stylesheets="/css/common.css"
           xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="controller.trainer.ReservationInfoController">

    <items>
        <VBox fx:id="detailArea" spacing="30" alignment="CENTER">
            <Label text="예약 등록" styleClass="reservationInfo_title_1" />

            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="nameField" promptText="이름" styleClass="nameInput"/>
            </HBox>

            <HBox alignment="CENTER" spacing="10"> <!-- phoneInput -->
                <TextField fx:id="rdateField" promptText="예약 일자" styleClass="rDateInput"/>
            </HBox>

            <HBox alignment="CENTER" spacing="10"> <!-- birthInput -->
                <TextField fx:id="rtimeField" promptText="예약 시간" styleClass="rTimeInput"/>
            </HBox>

            <HBox alignment="CENTER" spacing="20" styleClass="reservationInfo_Btn">
                <Button text="뒤로 가기" onAction="#goBack" styleClass="goBackBtn2"/>
                <Button text="예약 등록" onAction="#addReservation" styleClass="addReservationBtn"/>
            </HBox>
        </VBox>

        <!-- 예약 목록 영역 -->
        <VBox fx:id="listArea" spacing="40" alignment="CENTER" stylesheets="/css/common.css">
            <Label text="회원 정보" styleClass="reservationInfo_title_2" />
            <TableView fx:id="scheduleTable" prefHeight="550.0">
                <columns>
                    <TableColumn text="회원 이름" fx:id="memberNameColumn" styleClass="nameColumn"/>
                    <TableColumn text="예약 날짜" fx:id="dateColumn" styleClass="dateColumn"/>
                    <TableColumn text="예약 시간" fx:id="timeColumn" styleClass="timeColumn"/>
                </columns>
            </TableView>
        </VBox>

    </items>
</SplitPane>