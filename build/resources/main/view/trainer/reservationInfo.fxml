<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<SplitPane dividerPositions="0.40" orientation="HORIZONTAL" prefHeight="700.0" prefWidth="1050.0"
           xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="controller.trainer.ReservationInfoController">

    <items>

        <VBox fx:id="detailArea" spacing="20" alignment="CENTER">
            <Label text="예약 등록" />


            <HBox alignment="CENTER">
                <TextField fx:id="numField" promptText="회원 번호" />
            </HBox>

            <HBox alignment="CENTER">
                <TextField fx:id="nameField" promptText="이름" />
            </HBox>

            <HBox alignment="CENTER">
                <TextField fx:id="phoneField" promptText="전화번호" styleClass="phoneInput"/>
            </HBox>

            <HBox alignment="CENTER">
                <TextField fx:id="rdateField" promptText="예약일자(6자리)" styleClass="birthInput"/>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label>예약 시간</Label>
                <TextField fx:id="rtimeField" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Button text="예약 등록" onAction="#addReservationInfo"/>
                <Button text="뒤로 가기" onAction="#goBack"/>
            </HBox>
        </VBox>

        <!-- 예약 목록 영역 -->
        <VBox fx:id="listArea" spacing="20" alignment="CENTER">
            <Label text="회원 정보" />
            <TableView fx:id="reservationTable" prefHeight="550.0">
                <columns>
                    <TableColumn text="회원 번호" fx:id="memberNumCol"/>
                    <TableColumn text="회원 이름" fx:id="memberNameCol"/>
                    <TableColumn text="회원 전화번호" fx:id="memberPhoneCol"/>
                    <TableColumn text="예약 일자" fx:id="rdateCol"/>
                    <TableColumn text="예약 시간" fx:id="rtimeCol"/>
                </columns>
            </TableView>
        </VBox>
    </items>
</SplitPane>